{
  "functions": {
    // Явно указываем Vercel, что эти файлы являются источниками функций.
    "api/**/*.cjs": { 
      "memory": 1024,
      "maxDuration": 5,
      "src": "api/**/*.cjs" // КРИТИЧЕСКИ ВАЖНО: Явное указание источника
    }
  },
  "build": {
    "includeFiles": [
      "api/lib/*.cjs" 
    ]
  },
  "rewrites": [
    {
      "source": "/api/sheets/:path",
      "destination": "/api/sheets/:path.cjs"
    },
    {
      "source": "/api/:path",
      "destination": "/api/:path.cjs"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Date, X-Api-Version" }
      ]
    }
  ]
}
