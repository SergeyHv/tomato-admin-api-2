{
  "build": {
    "includeFiles": [
      "api/lib/**"
    ]
  },
  "rewrites": [
    // Явно маршрутизируем list
    {
      "source": "/api/sheets/list", 
      "destination": "/api/sheets/list.cjs"
    },
    // Общий шаблон для остальных файлов в sheets
    {
      "source": "/api/sheets/:path",
      "destination": "/api/sheets/:path.cjs"
    },
    // Общий шаблон для файлов в корне api (например, upload-image)
    {
      "source": "/api/:path",
      "destination": "/api/:path.cjs"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Date, X-Api-Version" }
      ]
    }
  ]
}
